name: "k6"

on:
  push:
    branches:
      - main

env:
  https_url: '${{ secrets.URL }}'

jobs:
#
  Terraform_Plan:
    name: "Test k6"
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v3

      - name: Verify blog-service started
        continue-on-error: true
        shell: bash
        run: |
          URL=https://$https_url/
          
          for i in {1..10}; do
             sleep 10  
             OUTPUT=$(curl -s -o /dev/null -w "%{http_code}\n" -m 5 $URL)
             if [[ $OUTPUT == 200 ]]; then
                 echo "$URL is up, returned $OUTPUT"
                 exit 0
             else
                 echo "$URL is not up, returned $OUTPUT"
                 echo "retry $i from 10"
             fi
          done
          exit 1

      - name: Change URL
        continue-on-error: true
        shell: bash
        run: |
          sed -i 's/127.0.0.1/'$https_url'/g' ./k6/http_get.js

      - name: Run k6 test
        uses: grafana/k6-action@v0.2.0
        with:
          filename: ./k6/http_get.js
          flags: --summary-trend-stats="avg,min,med,max,p(90),p(95),p(99),count" --vus 50 --duration 10s

      - name: Check file before upload
        run: |
          ls -lah

      - name: Upload performance test results
        uses: actions/upload-artifact@v3
        with:
          name: k6-report
          path: ./result.html

